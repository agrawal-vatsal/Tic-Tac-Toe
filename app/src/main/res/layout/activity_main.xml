<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ip520.connect3.MainActivity">

    <GridLayout
        android:id="@+id/board"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_alignStart="@+id/boardImage"
        android:layout_centerVertical="true"
        android:columnCount="3"
        android:rowCount="3"
        android:visibility="visible">

        <ImageView
            android:id="@+id/box1"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:alpha="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/box2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:alpha="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/box3"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:layout_row="0"
            android:alpha="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/box4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:alpha="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/box5"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:alpha="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/box6"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:layout_row="1"
            android:alpha="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/box7"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="0"
            android:layout_margin="15dp"
            android:layout_row="2"
            android:alpha="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/box8"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="1"
            android:layout_margin="15dp"
            android:layout_row="2"
            android:alpha="0"
            app:srcCompat="@drawable/red" />

        <ImageView
            android:id="@+id/box9"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_column="2"
            android:layout_margin="15dp"
            android:layout_row="2"
            android:alpha="0"
            app:srcCompat="@drawable/red" />


    </GridLayout>

    <ImageView
        android:id="@+id/boardImage"
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:layout_alignTop="@+id/board"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/board" />

    <LinearLayout
        android:id="@+id/winnerLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/boardImage"
        android:background="@color/colorPrimaryDark"
        android:alpha="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/winnerLabelText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="TextView" />

        <Button
            android:id="@+id/playAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Play Again" />
    </LinearLayout>
</RelativeLayout>
